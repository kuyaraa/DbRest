<Window x:Class="DbRest.DobavMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DbRest"
        mc:Ignorable="d"
        Title="DobavMenuWindow" Height="378" Width="712">
    <Grid Margin="0,0,10,12">
        <Label Content="Категория блюда" HorizontalAlignment="Left" Margin="47,45,0,0" VerticalAlignment="Top" Width="132"/>
        <Label Content="Название блюда" HorizontalAlignment="Left" Margin="47,89,0,0" VerticalAlignment="Top"/>
        <Label Content="Ингредиенты" HorizontalAlignment="Left" Margin="47,141,0,0" VerticalAlignment="Top"/>
        <Label Content="Цена" HorizontalAlignment="Left" Margin="60,191,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxKategoriya" HorizontalAlignment="Left" Margin="159,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184" Height="22" TextChanged="TextBoxKategoriya_TextChanged"/>
        <TextBox x:Name="TextBoxName" HorizontalAlignment="Left" Margin="159,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184" Height="22" TextChanged="TextBoxName_TextChanged"/>
        <TextBox x:Name="TextBoxIngredient" HorizontalAlignment="Left" Margin="159,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="26" TextChanged="TextBoxIngredient_TextChanged"/>
        <TextBox x:Name="TextBoxCena" HorizontalAlignment="Left" Margin="159,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="22" TextChanged="TextBoxCena_TextChanged"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="47,260,0,0" VerticalAlignment="Top" Height="33" Width="100" Click="Button_Click"/>

    </Grid>
</Window>
