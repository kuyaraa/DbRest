<Window x:Class="DbRest.DobavSotrudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DbRest"
        mc:Ignorable="d"
        Title="DobavSotrudWindow" Height="320" Width="607">
    <Grid Margin="0,0,10,8">
        <Label Content="Имя сотрудника" HorizontalAlignment="Left" Margin="28,37,0,0" VerticalAlignment="Top"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="34,85,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="34,122,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxPassword" HorizontalAlignment="Left" Margin="106,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" RenderTransformOrigin="0.496,0.128" Height="22" TextChanged="TextBoxPassword_TextChanged"/>
        <TextBox x:Name="TextBoxLogin" HorizontalAlignment="Left" Margin="108,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="193" Height="22" TextChanged="TextBoxLogin_TextChanged"/>
        <TextBox x:Name="TextBoxName" HorizontalAlignment="Left" Margin="143,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="20" TextChanged="TextBoxName_TextChanged"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="52,234,0,0" VerticalAlignment="Top" Height="31" Width="91" Click="Button_Click"/>
        <Label Content="Роль" HorizontalAlignment="Left" Margin="42,164,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxRole" HorizontalAlignment="Left" Margin="106,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" Height="22" TextChanged="TextBoxRole_TextChanged"/>

    </Grid>
</Window>
